# WardenXT Backend Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: Gemini API Configuration
# ===========================================
GEMINI_API_KEY=your_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# ===========================================
# Application Settings
# ===========================================
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# ===========================================
# Database Configuration
# ===========================================
# SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite:///./wardenxt.db
# DATABASE_URL=postgresql://user:password@localhost:5432/wardenxt

# ===========================================
# Security Configuration
# ===========================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_change_in_production

# JWT token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# Vector Store Configuration
# ===========================================
VECTOR_STORE_PATH=./data/vector_store

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=./logs/wardenxt.log

# ===========================================
# CORS Settings
# ===========================================
# JSON array format for allowed origins
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# For production, use comma-separated format:
# CORS_ORIGINS=https://your-frontend.vercel.app,https://wardenxt.com

# ===========================================
# Feature Flags
# ===========================================
ENABLE_TOTAL_RECALL=true
ENABLE_VISUAL_DEBUG=true
ENABLE_AGENTIC_ACTIONS=true
ENABLE_CHANGE_SENTINEL=true

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_PER_MINUTE=60

# ===========================================
# Production Settings (Railway/Render/Fly.io)
# ===========================================
# PORT is typically set by the hosting platform
# HOST=0.0.0.0
